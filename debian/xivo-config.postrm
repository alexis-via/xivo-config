#! /bin/sh
# postrm script for xivo-config
#
# see: dh_installdeb(1)

case "$1" in
        purge)
            package="xivo-config"
            dpkg-divert --list | grep -E " by $package$"
            if [ $? -eq 0 ]; then
                dpkg-divert --list | grep -E " by $package$" | cut -d\  -f3 | xargs -n 1 dpkg-divert --rename --remove
            fi
            directory="/var/lib/$package"
            if [ -d $directory ]; then
                rm -rf $directory
            fi
            ;;

        remove|upgrade)
            ;;

        failed-upgrade|abort-install|abort-upgrade|disappear) ;;

        *)
            echo "postrm called with unknown argument \`$1'" >&2
            exit 1

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
